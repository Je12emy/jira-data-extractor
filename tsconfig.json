{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "@model/*": ["./model/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
